<h1>Listing bid_items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% @bid_items.each do |bid_item| %>
  <tr>
    <td><%=h bid_item.title %></td>
    <td><%=h bid_item.body %></td>
    <td><%= link_to 'Show', bid_item %></td>
    <td><%= link_to 'Edit', edit_bid_item_path(bid_item) %></td>
    <td><%= link_to 'Destroy', bid_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bid_item', new_bid_item_path %>