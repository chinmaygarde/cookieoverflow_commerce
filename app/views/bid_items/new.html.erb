<h1>Add a new item for bidding</h1>

<% form_for(@bid_item, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :picture, "You can submit a picture here" %><br />
    <%= f.file_field :picture %>
  </p>

  <p>
    <%= f.label :starting_price %><br />
    <%= f.text_field :starting_price, :value => 0 %>
  </p>

  <p>
    <%= f.label :next_bid_delta, "Minimum price difference between bids" %><br />
    <%= f.text_field :next_bid_delta, :value => 10 %>
  </p>

  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time, :default => 2.days.from_now %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'Back', bid_items_path %>